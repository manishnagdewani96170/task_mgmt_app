<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'signup'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="header">

        <h3>Sign Up</h3>

      </div>

      <div class="sep"></div>

      <div class="inputs">

        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>

        <%= f.password_field :password, autocomplete: "off" , placeholder: "Password" %>

        <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: "Password Confirmation"  %>


        <%= f.submit "Sign Up",id: 'submit' %>
        <br>
        <div class="form-group">
          <div class="col-sm-6 col-sm-offset-1">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
  <% end %>
</div>
